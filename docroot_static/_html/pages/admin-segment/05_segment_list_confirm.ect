<% block 'script' : %>
  <script>
    jQuery(function($) {
      $(document).on({
        'mouseenter': function(e) {
          var trigger = e.currentTarget;
          var target = $(trigger).data('tooltip');
          $('.customaudienceTooltip').not(target).stop(true, true).fadeOut(200);
          $(target).css({
            top: $(trigger).position().top
          }).stop(true, true).fadeIn(200);
        }
      }, '.segmentItemInner, .listItem');

      $(document).on({
        'mouseleave': function() {
          $('.customaudienceTooltip').stop(true, true).fadeOut(200);
        }
      },'.segmentItemList, .segmentPreviewWrap');
    });
  </script>
<% end %>